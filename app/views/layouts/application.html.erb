<!DOCTYPE html>
<html>
  <head>
    <title>Dripcamp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script type="text/javascript">
      window.logoURL = "<%= image_url('logo.png') %>";
    </script>

    <script type="text/javascript">
      window.tentIconURL = "<%= image_url('tent_icon.jpg') %>";
    </script>

    <script type="text/javascript">
      window.footerLogoURL = "<%= image_url('footer_logo.svg') %>";
    </script>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
